<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.indepthrecyclerview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InDepthRecyclerView">
        <activity android:name="com.example.indepthrecyclerview.nestedrv.ui.NestedActivity" />
        <activity android:name="com.example.indepthrecyclerview.linearrv.ui.LinearActivity" />
        <activity android:name="com.example.indepthrecyclerview.hetrogenousrv.ui.HeterogenousActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>